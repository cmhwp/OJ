<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yupi.oj.mapper.FollowMapper">

    <resultMap id="BaseResultMap" type="com.yupi.oj.model.entity.Follow">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="userId" jdbcType="BIGINT"/>
            <result property="followId" column="followId" jdbcType="BIGINT"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,userId,createTime,
        updateTime,followId
    </sql>
    <select id="listFollowByPage"
            resultType="com.yupi.oj.model.entity.User">
        select q.*
        from User q
                 join (select followId from follow where userId = #{followUserId}) pf
                      on q.id = pf.followId ${ew.customSqlSegment}
    </select>
</mapper>
